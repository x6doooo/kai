.form-group
    textarea.form-control(name="{{f.key}}",
    rows="{{f.rows}}",
    cols="{{f.cols}}",
    kai-validator="f.validators",
    ng-disabled="f.disabled",
    ng-required="f.required",
    ng-model="formConfig.model[f.key]")
    p.field-tip(ng-show="f.tip") {{f.tip}}
    p.field-tip.invalid(ng-repeat="v in f.validators",ng-if="v.tip",ng-show="{{formName}}.{{f.key}}.$error[v.type]")
        |{{v.tip}}
